void setup() {
  Serial.begin(9600);
  display.begin(SSD1306_SWITCHCAPVCC, 0x3D);          //Loading display
  display.clearDisplay();                             //for Clearing the display
  display.drawBitmap(0, 0, myBitmap, 128, 64, WHITE); //Drawing the bitmap
  display.display();
  myMotorDriver.settings.commInterface = I2C_MODE;    //Setting motor driver at I2C
  myMotorDriver.settings.I2CAddress = 0x5D;           //I2C address of motor driver
  Wire.begin(); //Join I2C bus

  if (mp3.begin() == false) {
    Serial.println("Check MP3 I2C");     //Checking if there is a problem with MP3 I2C address
    while (1);
  }

  mp3.setVolume(10); //Volume of the MP3 played


  if (button.begin() == false) {
    Serial.println("Button not found"); //Checking if there is a problem with button I2C address
    while (1);
  }
  Serial.println("Button found.");

  button.LEDoff();                      //Button LED turned off at start
  

//  while ( myMotorDriver.busy() ); //Waiting for serial command.
//  myMotorDriver.enable();
  while ( myMotorDriver.busy() ); 
  myMotorDriver.inversionMode(0, 0); //Inverting the motors
  while ( myMotorDriver.busy() ); 
  myMotorDriver.inversionMode(1, 0); 


}

#define motor_left 1      //Defining left and right motors
#define motor_right 0
void loop() {
  if (button.isPressed() == true) {   //Check if button is pressed, turn on LED).
    button.LEDon(brightness);
    startCheck = true;
    delay(100);
  }

  if (startCheck == true) {          //If the button was pressed
    mp3.playTrack(1);                //Play the MP3

    for (int i = 0; i < 4; i++) {    //Loop the action 4 times
      delay(2000);                   //Wait for proper music to start

      
      myMotorDriver.setDrive(motor_left, 1, 80);     //Forward
      myMotorDriver.setDrive(motor_right, 1, 80);
      delay(1500);
      myMotorDriver.setDrive(motor_left, 1, 100);    //Right
      myMotorDriver.setDrive(motor_right, 1, 0);
      delay(800);
      myMotorDriver.setDrive(motor_left, 1, 80);     //Forward
      myMotorDriver.setDrive(motor_right, 1, 80);
      delay(1500);
      myMotorDriver.setDrive(motor_left, 1, 0);      //Left
      myMotorDriver.setDrive(motor_right, 1, 100);
      delay(800);
      myMotorDriver.setDrive(motor_left, 0, 80);     //Backward
      myMotorDriver.setDrive(motor_right, 0, 80);
      delay(1500);
      myMotorDriver.setDrive(motor_left, 1, 100);    //Right
      myMotorDriver.setDrive(motor_right, 1, 0);
      delay(800);
      myMotorDriver.setDrive(motor_left, 0, 80);     //Backward
      myMotorDriver.setDrive(motor_right, 0, 80);
      delay(1500);
      myMotorDriver.setDrive(motor_left, 1, 0);      //Left
      myMotorDriver.setDrive(motor_right, 1, 100);
      delay(800);
    }

    startCheck = false;                              //Action is done, can press button for restart
  }
  mp3.stop();                                        //Stop the music
  button.LEDoff();                                   //Turn of the LED
  myMotorDriver.setDrive(motor_left, 1, 0);          //Stop the motors
  myMotorDriver.setDrive(motor_right, 1, 0);


}
